<script type="text/javascript">

function verifyform()

{

var x=document.forms["myform"]["name"].value; if(x=="")

{

alert("Name must be filled out");

 return false;

}

else

{

document.write("FORM SUBMITTED SUCEESFULLY");

}

}

</script>

<body bgcolor="crayon">

